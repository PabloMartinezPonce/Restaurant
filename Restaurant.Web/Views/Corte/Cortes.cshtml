                                                        <a href="#" class="dropdown-item"><i class="fa fa-remove"></i> Remove</a>
                                                    </div>
                                                </div>
                                            </div>
                                        </td>*@
                                    </tr>
                                }
                            </tbody>
                        </table>

                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
